    <script type="text/javascript">

        $('[data-toggle="select2"]').select2();

        // Function to switch to the Payment Info tab
        function OnContinueToPayment() {
            var paymentTab = new bootstrap.Tab(document.querySelector("#custom-v-pills-payment-tab"));
            paymentTab.show(); // Show Payment Info tab
        }

        // Function to switch back to the Billing Info tab
        function OnBackToBilling() {
            var billingTab = new bootstrap.Tab(document.querySelector("#custom-v-pills-billing-tab"));
            billingTab.show(); // Show Billing Info tab
        }

        function OnUpdateTotal() {
            var quantity = document.getElementById("product-quantity").value; // Get selected quantity
            var pricePerUnit = 100; // Unit price
            var subTotal = quantity * pricePerUnit; // Calculate the subtotal

            // Update the subtotal and total fields
            document.getElementById("sub-total").textContent = "$" + subTotal.toFixed(2);
            document.getElementById("total-price").textContent = "$" + subTotal.toFixed(2);

           // Set the amount in the hidden input field
            document.getElementById("Amount").value = parseFloat(subTotal.toFixed(2));
        }

        // Initialize the total calculation on page load
        document.addEventListener("DOMContentLoaded", function () {
            OnUpdateTotal(); // Run the function to ensure total is calculated based on the default quantity

            var validationSummary = document.getElementById("validation-summary");
            if (validationSummary) {
                var errorItems = validationSummary.getElementsByTagName("li");

                // Check if there are any validation errors
                var hasErrors = Array.from(errorItems).some(function (li) {
                    return li.textContent.trim() !== ""; // Check if any <li> has content
                });

                // Remove the d-none class if there are errors
                if (hasErrors) {
                    validationSummary.classList.remove("d-none");
                } else {
                    validationSummary.classList.add("d-none");
                }
            }

        });

    </script>

